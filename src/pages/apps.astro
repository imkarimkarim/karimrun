---
import Layout from '../layouts/Layout.astro';
import { apps } from '../data/apps';
import { Image } from 'astro:assets';

---

<Layout title="apps">
    <nav class="flex justify-center absolute top-0 left-0 font-sf-pro">
        <a
          title='home'
          class="text-2xl md:text-4xl p-4"
          href='/'>
      /
        </a>
    </nav>
  <main class="container mx-auto p-4 pt-10 md:p-20 font-sf-pro">
    <h1 class="text-2xl md:text-4xl font-bold text-center mb-1">APPS</h1>
    <p class="text-center opacity-50 text-xs ">that created by karim</p>
    <div class="flex flex-wrap justify-center gap-16 px-0 pt-10 md:gap-20 md:pt-20">
      {apps.map((app) => (
        <a href={app.link} target="_blank">
        <article class="flex flex-col">
             <Image
            class="w-96 h-64 rounded-lg object-cover mb-3"
            loading="eager"
            width={1000}
            height={748}
            format={'webp'}
            src={`/images/${app.name.toLowerCase()}.png`}
            alt={app.name}
          />
          <p class="text-sm max-w-xs text-gray-600 dark:text-gray-300 mt-1"><span class="text-[1.1rem]"> {app.name} | </span> {app.description}</p>
        </article>
      </a>
      ))}
    </div>
  </main>
</Layout>

<style>
  :global(html[dir="rtl"]) {
    .container {
      direction: rtl;
    }
  }
</style>
