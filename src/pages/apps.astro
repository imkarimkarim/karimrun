---
import Layout from '../layouts/Layout.astro';
import { apps } from '../data/apps';
import { Image } from 'astro:assets';

---

<Layout title="apps">
    <nav class="flex justify-center absolute top-0 left-0 font-sf-pro">
        <a
          title='home'
          class="text-2xl md:text-4xl p-4"
          href='/'>
      /
        </a>
    </nav>
  <main class="container mx-auto p-8 pt-10 md:p-20 font-sf-pro">
    <h1 class="text-2xl md:text-4xl font-bold text-center mb-1">APPS</h1>
    <p class="text-center opacity-50 text-xs ">created by karim</p>
    <div class="flex flex-wrap justify-center gap-16 p-0 pt-10 md:gap-20 md:pt-20">
      {apps.map((app) => (
        <article class="flex flex-col">
          <img
            src={`https://picsum.photos/seed/${app.name}/512/512`}
            alt={app.name}
            class="w-96 h-64 rounded-lg object-cover mb-3"
          />
          <h2 class="text-2xl font-medium">{app.name}</h2>
          <p class="text-sm text-gray-600 dark:text-gray-300 mt-1">{app.description}</p>
        </article>
      ))}
    </div>
  </main>
</Layout>

<style>
  :global(html[dir="rtl"]) {
    .container {
      direction: rtl;
    }
  }
</style> 